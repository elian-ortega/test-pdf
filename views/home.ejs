<%- include("partials/header") %> 

<h1>Proforma</h1>


<form action="/invoice" method="POST">
    <div class="row col-sm-12">
        <input type="text" class="form-control" placeholder="Nombre Cliente" name="nombreCliente">
    </div>
    <% listaProductos.forEach((producto) =>{ %> 
        <div class="input-group mb-3 mt-3 row">
            
            <div class="input-group-prepend col-sm-12 col-md-6">
                <span class="input-group-text" id="inputGroup-sizing-default"><%= producto.nombre %> </span>
                <select class="custom-select" name="select<%= producto.id %>">
                    <option selected>Elegir...</option>
                    <% listaCapacidades.forEach(capacidad => { %> 
                        <option value=<%= capacidad.nombre %>><%= capacidad.nombre %> </option>  
                    <% }); %> 
                </select>
            </div>
       
            <div class="col-sm-12 col-md-3">
                <input type="text" class="form-control" placeholder="Cantidad" name="cant<%= producto.id %>">
            </div>
            <div class="col-sm-12 col-md-3">
                <input type="text" class="form-control" placeholder="Precio" name="precio<%= producto.id %>">
            </div>  
        </div>
        

    <% }); %> 

    <button class="btn btn-primary" type="submit">Proforma</button>
</form>


<%- include("partials/footer") %> 